{
    "manifest_version": 3,
    "name": "NotifyMe - Amazon",
    "version": "1.0",
    "description": "Notificador de precios y tallas en Amazon",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["https://www.amazon.com/*"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    }
}
